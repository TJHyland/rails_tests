<%= @school.id ? "Edit School" : "New School" %>

<%= form_for @school do |f| %>
  #make one of these for each school param
  <%= f.label :name %>
  <%= f.text_field :name, required: true%>
  
  <%= f.label :address %>
  <%= f.text_field :address, required: true%>

  <%= f.label :principal %>
  <%= f.text_field :principal, required: true%>

  <%= f.label :capacity %>
  <%= f.number_field :capacity, required: true%>

  <%= f.label :private_school %>
  <%= f.check_box_tag :private_school, required: true%>

  <%= f.submit%>
<% end %>

